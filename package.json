{
  "name": "tft-arena",
  "version": "1.0.0",
  "private": true,
  "description": "Plateforme de tournois Teamfight Tactics",
  "author": "TFT Arena Team",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:shared && pnpm build:backend && pnpm build:frontend",
    "build:shared": "pnpm --filter @tft-arena/shared build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "pnpm --filter backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter backend db:generate --schema=./src/shared/database/prisma/schema.prisma",
    "db:migrate": "pnpm --filter backend db:migrate --schema=./src/shared/database/prisma/schema.prisma",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "pnpm --filter backend clean && pnpm --filter frontend clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}