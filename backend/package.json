{
  "name": "backend",
  "version": "1.0.0",
  "description": "TFT Arena Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/shared/database/prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@prisma/client": "6.2.0",
    "bcrypt": "5.1.1",
    "bullmq": "5.28.2",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "express-rate-limit": "7.4.1",
    "handlebars": "4.7.8",
    "helmet": "8.0.0",
    "ioredis": "5.4.1",
    "jsonwebtoken": "9.0.2",
    "node-cron": "3.0.3",
    "passport": "0.7.0",
    "passport-discord": "0.1.4",
    "passport-google-oauth20": "2.0.0",
    "passport-jwt": "4.0.1",
    "passport-twitch-new": "^0.0.3",
    "resend": "4.0.1",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-discord": "^0.1.15",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "eslint": "9.15.0",
    "jest": "29.7.0",
    "prettier": "3.4.1",
    "prisma": "6.2.0",
    "supertest": "7.0.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}